<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Servlet mappings -->
    <servlet>
        <servlet-name>RoomSearchServlet</servlet-name>
        <servlet-class>com.yourcompany.sunsetparadisehotel.servlet.RoomSearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReservationServlet</servlet-name>
        <servlet-class>com.yourcompany.sunsetparadisehotel.servlet.ReservationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PreviousReservationsServlet</servlet-name>
        <servlet-class>com.yourcompany.sunsetparadisehotel.servlet.PreviousReservationsServlet</servlet-class>
    </servlet>

    <!-- Servlet mappings -->
    <servlet-mapping>
        <servlet-name>RoomSearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReservationServlet</servlet-name>
        <url-pattern>/reserve</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PreviousReservationsServlet</servlet-name>
        <url-pattern>/previous</url-pattern>
    </servlet-mapping>

</web-app>
